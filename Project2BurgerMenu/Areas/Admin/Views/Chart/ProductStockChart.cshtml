@{
    ViewBag.Title = "ProductStockChart";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Kategori-Ürün Grafiği</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <style>
        .card {
            height: 400px; /* Set a fixed height for the card */
        }

        #pieChart {
            width: 100%;
            height: 100%;
        }

        #barChart {
            width: 100%;
            height: 100%;
        }

        #lineChart {
            width: 100%;
            height: 100%;
        }

        #doughnutChart {
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="col-lg-6 grid-margin grid-margin-lg-0 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>
                <canvas id="pieChart"></canvas>
            </div>
        </div>
    </div>

    <div class="col-lg-6 grid-margin grid-margin-lg-0 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>
                <canvas id="barChart"></canvas>
            </div>
        </div>
    </div>

    <div class="col-lg-6 grid-margin grid-margin-lg-0 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>
                <canvas id="lineChart"></canvas>
            </div>
        </div>
    </div>

    <div class="col-lg-6 grid-margin grid-margin-lg-0 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>
                <canvas id="doughnutChart"></canvas>
            </div>
        </div>
    </div>

</body>
</html>
<script>

// PIE CHART
$(document).ready(function () {
    $.ajax({
        type: "POST",
        dataType: "json",
        contentType: "application/json",
        url: '@Url.Action("CategoryProductChart", "Chart", new { area = "Admin" })',
        success: function (result) {
            drawPieChart(result);  // drawPieChart fonksiyonu kullanılıyor
        },
        error: function (xhr, status, error) {
            console.error("AJAX Hatası:", status, error);
        }
    });
});

function drawPieChart(result) {
    var labels = [];
    var dataValues = [];

    $.each(result, function (i, obj) {
        labels.push(obj.CategoryName);
        dataValues.push(obj.ProductCount);
    });

    var ctx = document.getElementById('pieChart').getContext('2d');
    var myPieChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: labels,
            datasets: [{
                label: 'Ürün Sayısı',
                data: dataValues,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.6)',
                    'rgba(54, 162, 235, 0.6)',
                    'rgba(255, 206, 86, 0.6)',
                    'rgba(75, 192, 192, 0.6)',
                    'rgba(153, 102, 255, 0.6)',
                    'rgba(255, 159, 64, 0.6)',
                    'rgba(255, 99, 71, 0.6)',
                    'rgba(64, 224, 208, 0.6)',
                    'rgba(148, 0, 211, 0.6)'

                ],
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            title: {
                display: true,
                text: 'Ürün-Stok Grafiği'
            },
        }
    });
}

// BAR CHART
$(document).ready(function () {
    $.ajax({
        type: "POST",
        dataType: "json",
        contentType: "application/json",
        url: '@Url.Action("MessageChart", "Chart", new { area = "Admin" })',
        success: function (result) {
            drawBarChart(result);  // drawBarChart fonksiyonu kullanılıyor
        },
        error: function (xhr, status, error) {
            console.error("AJAX Hatası:", status, error);
        }
    });
});

function drawBarChart(result) {
    var labels = [];
    var dataValues = [];

    $.each(result, function (i, obj) {
        labels.push(obj.MessageName);
        dataValues.push(obj.MessageCount);
    });

    var ctx = document.getElementById('barChart').getContext('2d');
    var myBarChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Mesaj Sayısı',
                data: dataValues,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.6)',
                    'rgba(54, 162, 235, 0.6)',
                    'rgba(255, 206, 86, 0.6)',
                    'rgba(75, 192, 192, 0.6)',
                    'rgba(153, 102, 255, 0.6)',
                    'rgba(255, 159, 64, 0.6)'
                ],
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            title: {
                display: true,
                text: 'Mesaj-Kullanıcı Grafiği'
            },
        }
    });
}

// LINE CHART
// LINE CHART
$(document).ready(function () {
    $.ajax({
        type: "POST",
        dataType: "json",
        contentType: "application/json",
        url: '@Url.Action("ReservationChart", "Chart", new { area = "Admin" })',
        success: function (result) {
            console.log(result);
            drawLineChart(result);  // drawLineChart fonksiyonu kullanılıyor
        },
        error: function (xhr, status, error) {
            console.error("AJAX Hatası:", status, error);
            console.error("Hata Detayı:", xhr.responseText);
        }
    });
});

function drawLineChart(result) {
    var labels = [];
    var dataValues = [];

    $.each(result, function (i, obj) {
        console.log(obj); // Her objeyi konsola yazdır
        labels.push(obj.ReservationDate); // Tarih değeri
        dataValues.push(obj.ReservationCount); // Rezervasyon sayısı
    });

    var ctx = document.getElementById('lineChart').getContext('2d');
    var myLineChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: 'Rezervasyon Saatleri',
                data: dataValues,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.6)',
                    'rgba(54, 162, 235, 0.6)',
                    'rgba(255, 206, 86, 0.6)',
                    'rgba(75, 192, 192, 0.6)',
                    'rgba(153, 102, 255, 0.6)',
                    'rgba(255, 159, 64, 0.6)'
                ],
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            title: {
                display: true,
                text: 'Rezervasyon-Saat Grafiği'
            },
        }
    });
}

    // DOUGHNUT CHART
    $(document).ready(function () {
    $.ajax({
        type: "POST",
        dataType: "json",
        contentType: "application/json",
        url: '@Url.Action("DealofTheDaysCategory", "Chart", new { area = "Admin" })',
        success: function (result) {
            drawDoughnutChart(result);
        },
        error: function (xhr, status, error) {
            console.error("AJAX Hatası:", status, error);
        }
