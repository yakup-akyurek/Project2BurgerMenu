@model List<Project2BurgerMenu.Entities.Message>

@{
    ViewBag.Title = "SendBox";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Giden mesajlar</h4>
            <p class="card-description">

            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Alıcı</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Mesajı aç</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.ReceiverEmail</td>
                                <td>@item.Title</td>
                                <td>@item.SendDate.ToShortDateString()</td>
                                <td><a href="#" class="btn btn-warning">Mesajı aç</a></td>

                            </tr>

                        }

                    </tbody>
                </table>
                <a href=" #" class="btn btn-primary">yeni mesajı gönderin</a>
            </div>
        </div>
    </div>
</div>


